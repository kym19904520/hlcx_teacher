<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/dl_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/dl_logo" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@mipmap/dl_11"
            android:drawablePadding="20dp"
            android:hint="请输入账号"
            android:inputType="number"
            android:maxLength="11"
            android:padding="@dimen/padding_normal"
            android:text=""
            android:textColorHint="@color/text_hint"
            android:textSize="@dimen/login_text_size" />

            <ImageView
                android:id="@+id/iv_clean_phone"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_clear" />
        </LinearLayout>

        <View style="@style/Line.Hor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_psw"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableLeft="@mipmap/dl_12"
                android:drawablePadding="20dp"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="@dimen/padding_normal"
                android:text=""
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/login_text_size" />

            <ImageView
                android:id="@+id/iv_clean_password"
                android:layout_width="40dp"
                android:visibility="gone"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_clear" />

            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="40dp"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:src="@drawable/selector_eye" />
        </LinearLayout>

        <View style="@style/Line.Hor" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_forget_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_btn_margin_l_r"
        android:layout_marginRight="@dimen/big_btn_margin_l_r"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:text="忘记密码？"
        android:textColor="@color/text_gray_s"
        android:textSize="@dimen/text_normal" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_btn_height"
        android:layout_marginLeft="@dimen/big_btn_margin_l_r"
        android:layout_marginRight="@dimen/big_btn_margin_l_r"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_blue_background"
        android:text="登    录"
        android:textColor="@color/text_white"
        android:textSize="@dimen/big_btn_text_size" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/big_btn_margin_l_r"
        android:layout_marginRight="@dimen/big_btn_margin_l_r"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="注    册"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/big_btn_text_size" />
</LinearLayout>