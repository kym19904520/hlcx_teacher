<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_title" />

    <RelativeLayout
        android:background="@drawable/rl_customer_selector"
        android:id="@+id/rl_modification_password"
        style="@style/class_rl_style">

        <TextView
            style="@style/class_tv_name_style"
            android:text="修改密码" />

        <ImageView
            android:id="@+id/iv_arrows05"
            style="@style/class_iv_arrows_style" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_loginout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_btn_height"
        android:background="@drawable/round_red_background"
        android:layout_marginLeft="@dimen/big_btn_margin_l_r"
        android:layout_marginRight="@dimen/big_btn_margin_l_r"
        android:layout_marginTop="105dp"
        android:text="退出登录"
        android:textColor="@color/text_white"
        android:textSize="@dimen/big_btn_text_size" />
</LinearLayout>