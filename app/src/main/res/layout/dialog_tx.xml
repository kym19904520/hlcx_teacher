<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/def_sub_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="班级头像"
        android:textColor="@color/text_gray_s"
        android:textSize="@dimen/margin_more" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_head_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            style="@style/dialog_tv_style"
            android:background="@color/bg_blue_select_alpha"
            android:text="取消" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/dialog_tv_style"
            android:background="@color/colorPrimary"
            android:text="确定"
            android:textColor="@color/text_white" />
    </LinearLayout>
</LinearLayout>