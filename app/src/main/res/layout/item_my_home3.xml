<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/def_sub_bg"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_head"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/class_touxiang_01" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:ems="4"
        android:gravity="center"
        android:text="8月20日"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="王老师"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_green_background"
                android:paddingBottom="@dimen/tag_padding_t_b"
                android:paddingLeft="@dimen/tag_padding_l_r"
                android:paddingRight="@dimen/tag_padding_l_r"
                android:paddingTop="@dimen/tag_padding_t_b"
                android:text="语文"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_small" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="欣赏了那个日出，我就不再那个了"
                android:textColor="@color/text_black"
                android:textSize="13sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="5dp">

                <ImageView
                    android:id="@+id/iv_my_home_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/banner" />

                <com.up.study.weight.MyGridView
                    android:id="@+id/gv_my_home_imgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="3dp"
                    android:scrollbars="none"
                    android:numColumns="3"
                    android:verticalSpacing="3dp"
                    android:visibility="gone"></com.up.study.weight.MyGridView>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>