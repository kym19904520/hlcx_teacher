<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/gap_height"
        android:layout_marginBottom="3dp"
        android:background="@color/def_sub_bg"
        android:paddingBottom="@dimen/padding_small"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_small">

        <TextView
            android:id="@+id/tv_sub_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单选题"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:text="（20）"
            android:textColor="@color/text_gray_q"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="小计 30分"
            android:textColor="@color/text_gray_q"
            android:textSize="14sp" />
    </LinearLayout>

    <com.up.common.widget.MyListView
        android:id="@+id/mlv"
        android:layout_marginTop="3dp"
        android:divider="@color/bg_gray"
        android:dividerHeight="@dimen/gap_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.up.common.widget.MyListView>
</LinearLayout>